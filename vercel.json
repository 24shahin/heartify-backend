{
  "version": 2,
  "name": "my-project",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "DATABASE_URL": "@database-url",
    "API_KEY": "@my-api-key"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_ANALYTICS_ID": "example-analytics-id"
    }
  },
  "regions": ["sfo1", "bru1"],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    }
  ],
  "rewrites": [
    { 
      "source": "/about", 
      "destination": "/company/about" 
    }
  ],
  "redirects": [
    { 
      "source": "/old-page", 
      "destination": "/new-page", 
      "permanent": true 
    }
  ]
}
